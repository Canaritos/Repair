<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/volta_coordenador" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font"
        android:text="Olá, Beatriz Freitas!"
        android:textStyle="bold"
        android:textSize="23sp" />


    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carousel"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:fillColor="#FFFFFFFF"
        app:pageColor="#00000000"
        app:radius="6dp"
        android:layout_gravity="center"
        app:slideInterval="3000"
        app:strokeColor="#FF777777"
        app:strokeWidth="1dp"/>

    <View

        android:layout_width="360dp"
        android:layout_height="80dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_coordenador"
        android:onClick="cadastro" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="-60dp"
        android:textColor="#fff"
        android:fontFamily="@font/font"
        android:text="Pendências a serem feitas"
        android:textSize="22sp" />

    <View

        android:layout_width="360dp"
        android:layout_height="80dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_coordenador" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="-60dp"
        android:fontFamily="@font/font"
        android:text="Pendências realizadas"
        android:textColor="#fff"
        android:textSize="22sp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="-645dp"
        android:fontFamily="@font/lobster"
        android:text="Repair"
        android:textColor="#000"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="440dp"
        android:src="@drawable/setaroxa" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/setaroxa" />

</LinearLayout>