<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/fotopadrao"
        app:civ_border_color="@color/colorAluno"
        app:civ_border_width="3dp" />



    <TextView
        android:id="@+id/txtNomeAlu"
        android:layout_width="150dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="-70dp"
        android:textColor="#000"
        android:fontFamily="@font/font"
        android:layout_height="wrap_content"
        android:layout_marginLeft="155dp"
        android:text="Gustavo Henrique" />

    <TextView
        android:id="@+id/txtEmailAlu"
        android:layout_width="200dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/font"
        android:layout_height="wrap_content"
        android:text="gusales1010@gmail.com" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/arruma_aluno"
        />

    <TextView

        android:layout_width="150dp"
        android:textStyle="bold"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:layout_marginLeft="-45dp"
        android:layout_marginTop="-30dp"
        android:fontFamily="@font/font"
        android:layout_height="wrap_content"
        android:text="Conta" />




    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/notification_alu"
        />

    <TextView

        android:layout_width="150dp"
        android:textStyle="bold"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:layout_marginLeft="-45dp"
        android:layout_marginTop="-32dp"
        android:fontFamily="@font/font"
        android:layout_height="wrap_content"
        android:text="Notificações" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/relatorio_alu"
        />

    <TextView

        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-32dp"
        android:fontFamily="@font/font"
        android:onClick="politicaPrivacidadeAluno"
        android:text="Política de privacidade"
        android:textSize="23dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/help_alu"
        />

    <TextView
        android:id="@+id/txvAjudaAluno"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="-45dp"
        android:layout_marginTop="-32dp"
        android:fontFamily="@font/font"
        android:onClick="ajudaAluno"
        android:text="Ajuda"
        android:textSize="23dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/exit_alu"
        />

    <TextView

        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="-40dp"
        android:layout_marginTop="-32dp"
        android:fontFamily="@font/font"
        android:onClick="logoutAluno"
        android:text="Sair"
        android:textSize="23dp"
        android:textStyle="bold" />





</LinearLayout>