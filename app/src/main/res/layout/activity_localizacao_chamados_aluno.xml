<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:orientation="vertical"
    tools:context=".Localizacao_chamados_alu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/volta_aluno" />


        <View

            android:layout_width="360dp"
            android:layout_height="580dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/round_branco" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-710dp"
            android:src="@drawable/localizaluno" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/baloo_da"
            android:text="Localização do chamado"
            android:textSize="20sp" />

        <TextView
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="-70dp"
            android:fontFamily="@font/baloo_da"
            android:text="Para abrir um chamado automaticamente, use o QRCode."
            android:textAlignment="gravity"
            android:textColor="@color/colorAluno"
            android:textSize="13sp" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo_da"
            android:text="Andar"
            android:textSize="20sp" />

        <RadioGroup
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="-15dp"
            android:orientation="vertical" >

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subsolo"
                android:buttonTint="@color/colorAluno"
                android:textSize="19sp"
                android:fontFamily="@font/font"
                android:id="@+id/rbSubsolo"
                />

            <RadioButton
                android:fontFamily="@font/font"
                android:textSize="19sp"
                android:buttonTint="@color/colorAluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1° Andar"
                android:id="@+id/rbPrimeiroAndar"
                />

            <RadioButton
                android:fontFamily="@font/font"
                android:textSize="19sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorAluno"
                android:text="2° Andar"
                android:id="@+id/rbSegundoAndar"
                />
        </RadioGroup>

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo_da"
            android:text="Sala/Ambiente"
            android:textSize="20sp" />

        <View

            android:layout_width="335dp"
            android:layout_height="50dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/round_cinza" />

        <Spinner
            android:id="@+id/spnSala"
            android:layout_width="320dp"
            android:layout_height="44dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-50dp"
            android:backgroundTint="@color/colorAluno"
            android:entries="@array/salas"
            android:spinnerMode="dropdown"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo_da"
            android:text="Mesa"
            android:textSize="20sp"
            android:visibility="visible" />

        <View

            android:layout_width="335dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-5dp"
            android:background="@drawable/round_cinza"
            android:visibility="visible" />

        <Spinner
            android:id="@+id/spnMesa"
            android:layout_width="320dp"
            android:layout_height="44dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-50dp"
            android:backgroundTint="@color/colorAluno"
            android:entries="@array/mesas"
            android:spinnerMode="dropdown"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnLocalizacaoChamado"
            android:background="@drawable/nextaluno"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:onClick="segundaEtapaChamado"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="25dp"
            />

        <Button
            android:id="@+id/qrcodeLocaliza"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="-690dp"
            android:background="@drawable/qraluno"
            android:fontFamily="@font/baloo_da"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>